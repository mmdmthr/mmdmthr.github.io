---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SimpleGallery from '../components/SimpleGallery.jsx';
import { SITE_TITLE } from '../consts';
import photos from '../photos'

const pageTitle = `Gallery | ${SITE_TITLE}`;
const pageDescription = "A collection of photographs captured in moments.";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={pageTitle} description={pageDescription} />
  </head>
  <body>
    <Header />
    <main>
      <div class="gallery-header">
        <h1>Photo Gallery</h1>
        <p>A collection of photographs captured in moments.</p>
      </div>
        <SimpleGallery 
          photos={photos}
          client:load
        />
    </main>
    <Footer />
  </body>
</html>

<style>
  .gallery-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .gallery-header h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: rgb(var(--black));
  }
  
  .gallery-header p {
    font-size: 1.1rem;
    color: rgb(var(--gray));
    max-width: 600px;
    margin: 0 auto;
  }
  
  main {
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 3em 2em;
  }
  
  .no-photos {
    text-align: center;
    color: rgb(var(--gray));
    font-style: italic;
    margin-top: 3rem;
  }
  
  @media (max-width: 768px) {
    main {
      padding: 2em 1em;
    }
    
    .gallery-header h1 {
      font-size: 2rem;
    }
  }

  /* Simple Gallery Styles */
  :global(.simple-gallery) {
    width: 100%;
  }

  :global(.simple-gallery img) {
    border-radius: 8px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    cursor: pointer;
  }

  :global(.simple-gallery img:hover) {
    transform: scale(1.02);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
  }
</style>
